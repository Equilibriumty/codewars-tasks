{
    "extends": ["prettier"],
    "env": {
        "browser": false,
        "node": true,
        "es6": true
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-empty": "warn",
        "no-cond-assign": ["error", "always"],
        "for-direction": "off"
    }
}
